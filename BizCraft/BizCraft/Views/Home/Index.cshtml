@model Bizcraft.ViewModels.HomeIndexVM
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<!-- Slider start -->
<section id="home" class="p-0">
    <div id="main-slide" class="cd-hero">
        <ul class="cd-hero-slider">
            @{ var firstslider = Model.Sliders.First();}
            <li class="selected">
                <div class="overlay2">
                    <img class="" src="~/images/slider/@firstslider.Image" alt="slider">
                </div>
                <div class="cd-full-width">
                    <h2>@firstslider.Title</h2>
                    <h3>We Making Difference To Great Things Possible</h3>
                    <a href="#0" class="btn btn-primary white cd-btn">Start Now</a>
                    <a href="#0" class="btn btn-primary solid cd-btn">Learn More</a>
                </div> <!-- .cd-full-width -->
            </li>
            @{ var secondSlide = Model.Sliders.Skip(1).First();}

            <li>
                <div class="overlay2">
                    <img class="" src="~/images/slider/@secondSlide.Image" alt="slider">
                </div>
                <div class="cd-half-width">
                    <h2>@secondSlide.Title</h2>
                    <p>@secondSlide.SubTitle</p>
                    <a href="#0" class="cd-btn btn btn-primary solid">@secondSlide.ButtonTwo</a>
                </div> <!-- .cd-half-width -->

                <div class="cd-half-width cd-img-container">
                    <img src="~/images/slider/bg-thumb1.png" alt="">
                </div> <!-- .cd-half-width.cd-img-container -->
            </li>


            @{ var ThirdSlide = Model.Sliders.Skip(2).First();}
            <li>
                <div class="overlay2">
                    <img class="" src="~/images/slider/@ThirdSlide.Image" alt="slider">
                </div>
                <div class="cd-half-width cd-img-container img-right">
                    <img src="~/images/slider/bg-thumb2.png" alt="">
                </div>  .cd-half-width.cd-img-container
                <div class="cd-half-width">
                    <h2>@ThirdSlide.Title</h2>
                    <p>@ThirdSlide.SubTitle</p>
                    <a href="#0" class="cd-btn btn btn-primary white">@ThirdSlide.ButtonOne</a>
                    <a href="#0" class="cd-btn btn secondary btn-primary solid">@ThirdSlide.ButtonTwo</a>
                </div>  .cd-half-width
            </li>
            <li class="cd-bg-video">
                <div class="cd-full-width">
                    <h2>WE ARE HERE TO MAKE IT HAPPEN</h2>
                    <h3>We Making Difference To Great Things Possible</h3>

                    <a href="#0" class="cd-btn btn btn-primary solid">Learn more</a>
                </div> <!-- .cd-full-width -->

                <div class="cd-bg-video-wrapper" data-video="videos/video">
                    <!-- video element will be loaded using jQuery -->
                </div> <!-- .cd-bg-video-wrapper -->
            </li>
        </ul>
        <!--/ cd-hero-slider -->

        <div class="cd-slider-nav">
            <nav>
                <span class="cd-marker item-1"></span>
                <ul>
                    <li class="selected"><a href="#0"><i class="fa fa-bicycle"></i> Invent</a></li>
                    <li><a href="#0"><i class="fa fa-hotel"></i> Dream</a></li>
                    <li><a href="#0"><i class="fa fa-android"></i> Tech</a></li>
                    <li class="video"><a href="#0"><i class="fa fa-video-camera"></i> Video</a></li>
                </ul>
            </nav>
        </div> <!-- .cd-slider-nav -->

    </div>
    <!--/ Main slider end -->
</section>
<!--/ Slider end -->
<!-- Service box start -->
<section id="service" class="service angle">
    <div class="container">
        <div class="row">
            <div class="col-md-12 heading">
                <span class="title-icon float-left"><i class="fa fa-cogs"></i></span>
                <h2 class="title">
                    Service We Provide <span class="title-desc">
                        A Quality Experience Team with 4 years
                        experience
                    </span>
                </h2>
            </div>
        </div><!-- Title row end -->

        <div class="row">
            @foreach (var item in Model.ServiceProvides)
            {
                <div class="col-md-3 col-sm-3 wow fadeInDown" data-wow-delay=".5s">
                    <div class="service-content text-center">
                        <span class="service-icon icon-pentagon"><i class="fa fa-tachometer"></i></span>
                        <h3>@item.Title</h3>
                        <p>@item.SubTitle</p>
                    </div>
